    <color name="background-primary" rgba="#1A1A1Eff"/>
    <color name="background-secondary" rgba="#252529ff"/>
    <color name="accent-primary" rgba="#FF6B35ff"/>
    <color name="accent-secondary" rgba="#4ECDC4ff"/>
