    <control-tag name="InputGain" tag="3840"/>
    <control-tag name="OutputGain" tag="3841"/>
    <control-tag name="GlobalMix" tag="3842"/>
    <control-tag name="BandCount" tag="3843"/>
    <control-tag name="OversampleMax" tag="3844"/>

    <!-- Sweep Parameters (0x0E00 range) -->
