  <!-- Gradients -->
  <gradients>
    <gradient name="spectrum-gradient">
      <color-stop rgba="#FF6B3540" start="0"/>
      <color-stop rgba="#4ECDC440" start="0.25"/>
      <color-stop rgba="#95E86B40" start="0.5"/>
      <color-stop rgba="#C792EA40" start="0.75"/>
      <color-stop rgba="#F78C6C40" start="1"/>
    </gradient>
    <gradient name="button-default">
      <color-stop rgba="#303035ff" start="0"/>
      <color-stop rgba="#252529ff" start="1"/>
    </gradient>
    <gradient name="button-active">
      <color-stop rgba="#404048ff" start="0"/>
      <color-stop rgba="#303035ff" start="1"/>
    </gradient>
  </gradients>

  <!-- Main Editor Template (FR-011) -->
  <template name="editor" class="CViewContainer" size="1000, 600"
            background-color="background-primary" minSize="800, 500" maxSize="1400, 900">

    <!-- Header Panel -->
    <view class="CViewContainer" origin="0, 0" size="1000, 50" background-color="background-secondary">
      <view class="CTextLabel" origin="20, 10" size="200, 30" title="Disrumpo"
            font="title-font" font-color="text-primary" text-alignment="left"/>

      <!-- Preset Button (T5b.9 placeholder - no functionality until Week 12) -->
      <view class="CTextButton" origin="250, 12" size="80, 25" title="Preset"
            font="label-font" font-color="text-primary" frame-color="border"
            gradient="button-default" gradient-highlighted="button-active"/>

      <!-- Global Controls in Header -->
      <view class="CViewContainer" origin="700, 5" size="290, 40" transparent="true">
        <view class="CTextLabel" origin="0, 0" size="50, 15" title="Input"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CKnob" origin="5, 15" size="40, 25"
              control-tag="InputGain" default-value="0.5" min-value="0" max-value="1"
              background-color="panel" handle-color="accent-primary"/>

        <view class="CTextLabel" origin="50, 0" size="50, 15" title="Output"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CKnob" origin="55, 15" size="40, 25"
              control-tag="OutputGain" default-value="0.5" min-value="0" max-value="1"
              background-color="panel" handle-color="accent-primary"/>

        <view class="CTextLabel" origin="100, 0" size="50, 15" title="Mix"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CKnob" origin="105, 15" size="40, 25"
              control-tag="GlobalMix" default-value="1.0" min-value="0" max-value="1"
              background-color="panel" handle-color="accent-primary"/>

        <view class="CTextLabel" origin="155, 0" size="60, 15" title="Bands"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="COptionMenu" origin="155, 18" size="60, 20"
              control-tag="BandCount" default-value="0.428" font="value-font"
              font-color="text-primary" back-color="panel" frame-color="border"/>

        <view class="CTextLabel" origin="220, 0" size="60, 15" title="OS Max"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="COptionMenu" origin="220, 18" size="60, 20"
              control-tag="OversampleMax" default-value="0.66" font="value-font"
              font-color="text-primary" back-color="panel" frame-color="border"/>
      </view>
    </view>

    <!-- Spectrum Display (FR-013) - Custom VSTGUI view for frequency band regions -->
    <view class="CView" custom-view-name="SpectrumDisplay" origin="20, 60" size="960, 120"/>

    <!-- Band Strips Container -->
    <view class="CViewContainer" origin="20, 190" size="960, 350" background-color="background-primary">

      <!-- Band 1 Strip (FR-014) -->
      <view class="CViewContainer" origin="0, 0" size="235, 340" background-color="panel"
            control-tag="Band1Container">
        <view class="CTextLabel" origin="0, 5" size="235, 20" title="Band 1"
              font="section-font" font-color="band-1" text-alignment="center"/>

        <!-- Type Selector -->
        <view class="CTextLabel" origin="10, 30" size="50, 15" title="Type"
              font="small-font" font-color="text-secondary"/>
        <view class="COptionMenu" origin="10, 45" size="215, 22"
              control-tag="B1N1Type" font="value-font"
              font-color="text-primary" back-color="background-secondary" frame-color="border"/>

        <!-- Drive & Mix Row -->
        <view class="CTextLabel" origin="10, 75" size="60, 15" title="Drive"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="10, 90" size="100, 20" orientation="horizontal"
              control-tag="B1N1Drive" default-value="0.1" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>
        <view class="CParamDisplay" origin="10, 112" size="100, 15"
              control-tag="B1N1Drive" font="value-font" font-color="text-primary"
              back-color="transparent" text-alignment="center"/>

        <view class="CTextLabel" origin="120, 75" size="60, 15" title="Mix"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="120, 90" size="100, 20" orientation="horizontal"
              control-tag="B1N1Mix" default-value="1.0" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>
        <view class="CParamDisplay" origin="120, 112" size="100, 15"
              control-tag="B1N1Mix" font="value-font" font-color="text-primary"
              back-color="transparent" text-alignment="center"/>

        <!-- Tone & Bias Row -->
        <view class="CTextLabel" origin="10, 135" size="60, 15" title="Tone"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="10, 150" size="100, 20" orientation="horizontal"
              control-tag="B1N1Tone" default-value="0.487" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>

        <view class="CTextLabel" origin="120, 135" size="60, 15" title="Bias"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="120, 150" size="100, 20" orientation="horizontal"
              control-tag="B1N1Bias" default-value="0.5" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>

        <!-- Gain & Pan Row -->
        <view class="CTextLabel" origin="10, 200" size="60, 15" title="Gain"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="10, 215" size="100, 20" orientation="horizontal"
              control-tag="Band1Gain" default-value="0.5" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>
        <view class="CParamDisplay" origin="10, 237" size="100, 15"
              control-tag="Band1Gain" font="value-font" font-color="text-primary"
              back-color="transparent" text-alignment="center"/>

        <view class="CTextLabel" origin="120, 200" size="60, 15" title="Pan"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="120, 215" size="100, 20" orientation="horizontal"
              control-tag="Band1Pan" default-value="0.5" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>
        <view class="CParamDisplay" origin="120, 237" size="100, 15"
              control-tag="Band1Pan" font="value-font" font-color="text-primary"
              back-color="transparent" text-alignment="center"/>

        <!-- Solo/Bypass/Mute Buttons (FR-030) -->
        <view class="CViewContainer" origin="10, 270" size="215, 30" transparent="true">
          <view class="COnOffButton" origin="30, 0" size="40, 25"
                control-tag="Band1Solo" default-value="0"/>
          <view class="CTextLabel" origin="30, 25" size="40, 15" title="Solo"
                font="small-font" font-color="text-secondary" text-alignment="center"/>

          <view class="COnOffButton" origin="90, 0" size="40, 25"
                control-tag="Band1Bypass" default-value="0"/>
          <view class="CTextLabel" origin="90, 25" size="40, 15" title="Bypass"
                font="small-font" font-color="text-secondary" text-alignment="center"/>

          <view class="COnOffButton" origin="150, 0" size="40, 25"
                control-tag="Band1Mute" default-value="0"/>
          <view class="CTextLabel" origin="150, 25" size="40, 15" title="Mute"
                font="small-font" font-color="text-secondary" text-alignment="center"/>
        </view>

        <!-- Morph Controls (FR-028) -->
        <view class="CTextLabel" origin="10, 305" size="60, 15" title="Morph X"
              font="small-font" font-color="text-secondary"/>
        <view class="CSlider" origin="70, 305" size="60, 15" orientation="horizontal"
              control-tag="Band1MorphX" default-value="0.5" min-value="0" max-value="1"
              background-color="slider-track" handle-color="accent-secondary"/>

        <view class="CTextLabel" origin="135, 305" size="60, 15" title="Morph Y"
              font="small-font" font-color="text-secondary"/>
        <view class="CSlider" origin="195, 305" size="60, 15" orientation="horizontal"
              control-tag="Band1MorphY" default-value="0.5" min-value="0" max-value="1"
              background-color="slider-track" handle-color="accent-secondary"/>
      </view>

      <!-- Band 2 Strip -->
      <view class="CViewContainer" origin="240, 0" size="235, 340" background-color="panel"
            control-tag="Band2Container">
        <view class="CTextLabel" origin="0, 5" size="235, 20" title="Band 2"
              font="section-font" font-color="band-2" text-alignment="center"/>

        <!-- Type Selector -->
        <view class="CTextLabel" origin="10, 30" size="50, 15" title="Type"
              font="small-font" font-color="text-secondary"/>
        <view class="COptionMenu" origin="10, 45" size="215, 22"
              control-tag="B2N1Type" font="value-font"
              font-color="text-primary" back-color="background-secondary" frame-color="border"/>

        <!-- Drive & Mix Row -->
        <view class="CTextLabel" origin="10, 75" size="60, 15" title="Drive"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="10, 90" size="100, 20" orientation="horizontal"
              control-tag="B2N1Drive" default-value="0.1" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>
        <view class="CParamDisplay" origin="10, 112" size="100, 15"
              control-tag="B2N1Drive" font="value-font" font-color="text-primary"
              back-color="transparent" text-alignment="center"/>

        <view class="CTextLabel" origin="120, 75" size="60, 15" title="Mix"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="120, 90" size="100, 20" orientation="horizontal"
              control-tag="B2N1Mix" default-value="1.0" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>
        <view class="CParamDisplay" origin="120, 112" size="100, 15"
              control-tag="B2N1Mix" font="value-font" font-color="text-primary"
              back-color="transparent" text-alignment="center"/>

        <!-- Gain & Pan Row -->
        <view class="CTextLabel" origin="10, 140" size="60, 15" title="Gain"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="10, 155" size="100, 20" orientation="horizontal"
              control-tag="Band2Gain" default-value="0.5" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>

        <view class="CTextLabel" origin="120, 140" size="60, 15" title="Pan"
              font="small-font" font-color="text-secondary" text-alignment="center"/>
        <view class="CSlider" origin="120, 155" size="100, 20" orientation="horizontal"
              control-tag="Band2Pan" default-value="0.5" min-value="0" max-value="1"
              background-color="slider-track" handle-color="slider-handle"/>

