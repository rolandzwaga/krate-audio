    <!-- ======================================================================
         Mode Panel Templates - Each mode has its own template
         Order MUST match Mode parameter values: 0-10
         ====================================================================== -->

    <!-- Mode 0: GRANULAR -->
    <template name="GranularPanel" class="CViewContainer" origin="0, 0" size="860, 400" background-color="panel" transparent="false">
        <view class="CTextLabel" origin="10, 5" size="200, 22" title="GRANULAR DELAY" font="section-font" font-color="accent" transparent="true"/>
        <!-- Row 1 -->
        <view class="CTextLabel" origin="10, 35" size="90, 16" title="Grain Size" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="10, 53" size="120, 20" control-tag="GranularGrainSize" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="140, 35" size="90, 16" title="Density" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="140, 53" size="120, 20" control-tag="GranularDensity" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="270, 35" size="90, 16" title="Delay Time" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="270, 53" size="120, 20" control-tag="GranularDelayTime" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="400, 35" size="90, 16" title="Pitch" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="400, 53" size="120, 20" control-tag="GranularPitch" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="530, 35" size="90, 16" title="Feedback" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="530, 53" size="120, 20" control-tag="GranularFeedback" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="660, 35" size="90, 16" title="Dry/Wet" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="660, 53" size="120, 20" control-tag="GranularDryWet" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <!-- Row 2 -->
        <view class="CTextLabel" origin="10, 85" size="90, 16" title="Pitch Spray" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="10, 103" size="120, 20" control-tag="GranularPitchSpray" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="140, 85" size="90, 16" title="Pos Spray" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="140, 103" size="120, 20" control-tag="GranularPositionSpray" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="270, 85" size="90, 16" title="Pan Spray" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="270, 103" size="120, 20" control-tag="GranularPanSpray" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="400, 85" size="90, 16" title="Reverse %" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="400, 103" size="120, 20" control-tag="GranularReverseProb" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <view class="CTextLabel" origin="530, 85" size="90, 16" title="Output" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="CSlider" origin="530, 103" size="120, 20" control-tag="GranularOutputGain" orientation="horizontal" draw-frame="true" draw-back="true" draw-value="true" frame-color="border" back-color="slider-track" value-color="accent"/>
        <!-- Row 3 -->
        <view class="CTextLabel" origin="10, 135" size="90, 16" title="Envelope" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="COptionMenu" origin="10, 153" size="120, 22" control-tag="GranularEnvelopeType" font="value-font" font-color="text" back-color="sidebar" frame-color="border" frame-width="1" style-round-rect="true" round-rect-radius="2" mouse-enabled="true" wants-focus="true" menu-popup-style="true"/>
