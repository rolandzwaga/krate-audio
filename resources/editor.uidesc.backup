        <!-- UI Label Tags (9900+) - for conditional visibility -->
        <control-tag name="DigitalDelayTimeLabel" tag="9901"/>
        <control-tag name="DigitalAgeLabel" tag="9902"/>
        <control-tag name="PingPongDelayTimeLabel" tag="9903"/>
