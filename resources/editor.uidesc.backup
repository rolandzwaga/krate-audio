<?xml version="1.0" encoding="UTF-8"?>
<!--
==============================================================================
VSTGUI UIDescription - Iterum Delay Plugin
==============================================================================
11 delay modes with 113+ automatable parameters.
Uses CViewSwitchContainer to show only the selected mode's panel.
==============================================================================
-->
<vstgui-ui-description version="1">

    <bitmaps/>

    <fonts>
        <font name="title-font" font-name="Arial" size="18" bold="true"/>
        <font name="section-font" font-name="Arial" size="14" bold="true"/>
        <font name="label-font" font-name="Arial" size="11"/>
        <font name="value-font" font-name="Arial" size="10"/>
        <font name="mode-font" font-name="Arial" size="12"/>
    </fonts>

    <colors>
        <color name="background" rgba="#252525ff"/>
        <color name="header" rgba="#1a1a1aff"/>
        <color name="sidebar" rgba="#2d2d2dff"/>
        <color name="panel" rgba="#353535ff"/>
        <color name="section" rgba="#3a3a3aff"/>
        <color name="text" rgba="#ffffffff"/>
        <color name="text-dim" rgba="#888888ff"/>
        <color name="accent" rgba="#4a90d9ff"/>
        <color name="slider-track" rgba="#505050ff"/>
        <color name="border" rgba="#404040ff"/>
    </colors>

    <!-- ======================================================================
         Control Tags - All Parameters
         ====================================================================== -->
    <control-tags>
        <!-- Global (0-99) -->
        <control-tag name="Bypass" tag="0"/>
        <control-tag name="Gain" tag="1"/>
        <control-tag name="Mode" tag="2"/>

        <!-- Granular (100-112) -->
        <control-tag name="GranularGrainSize" tag="100"/>
