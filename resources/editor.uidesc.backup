        <!-- Tempo Sync Controls (spec 038) -->
        <view class="CTextLabel" origin="270, 135" size="90, 16" title="Time Mode" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="COptionMenu" origin="270, 153" size="120, 22" control-tag="GranularTimeMode" font="value-font" font-color="text" back-color="sidebar" frame-color="border" frame-width="1" style-round-rect="true" round-rect-radius="2" mouse-enabled="true" wants-focus="true" menu-popup-style="true"/>
        <view class="CTextLabel" origin="400, 135" size="90, 16" title="Note Value" font="label-font" font-color="text-dim" transparent="true"/>
        <view class="COptionMenu" origin="400, 153" size="120, 22" control-tag="GranularNoteValue" font="value-font" font-color="text" back-color="sidebar" frame-color="border" frame-width="1" style-round-rect="true" round-rect-radius="2" mouse-enabled="true" wants-focus="true" menu-popup-style="true"/>
    </template>

